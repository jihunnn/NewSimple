<tiles-definitions>

	<definition name="baseLayout"
		template="/WEB-INF/views/common/layout.jsp">
		<put-attribute name="header"
			value="/WEB-INF/views/common/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer"
			value="/WEB-INF/views/common/footer.jsp" />
		<put-attribute name="side"
			value="/WEB-INF/views/common/side.jsp" />
	</definition>

	<definition name="product/listProduct_bed"
		extends="baseLayout">
		<put-attribute name="title" value="상품침대목록" />
		<put-attribute name="body"
			value="/WEB-INF/views/product/product_bed.jsp" />
	</definition>

	<definition name="product/listProduct_sofa"
		extends="baseLayout">
		<put-attribute name="title" value="상품소파목록" />
		<put-attribute name="body"
			value="/WEB-INF/views/product/product_sofa.jsp" />
	</definition>

	<definition name="product/listProduct_wardrobe"
		extends="baseLayout">
		<put-attribute name="title" value="상품화장대목록" />
		<put-attribute name="body"
			value="/WEB-INF/views/product/product_wardrobe.jsp" />
	</definition>

	<definition name="product/listProduct_table01"
		extends="baseLayout">
		<put-attribute name="title" value="상품식탁목록" />
		<put-attribute name="body"
			value="/WEB-INF/views/product/product_table01.jsp" />
	</definition>

	<definition name="product/listProduct_table02"
		extends="baseLayout">
		<put-attribute name="title" value="상품책상목록" />
		<put-attribute name="body"
			value="/WEB-INF/views/product/product_table02.jsp" />
	</definition>

	<definition name="product/viewProduct" extends="baseLayout">
		<put-attribute name="title" value="상품목록상세창" />
		<put-attribute name="body"
			value="/WEB-INF/views/product/product_detail.jsp" />
	</definition>

	<definition name="searchProduct" extends="baseLayout">
		<put-attribute name="title" value="상품검색어창" />
		<put-attribute name="body"
			value="/WEB-INF/views/product/searchProduct.jsp" />
	</definition>


	<definition name="myCartList" extends="baseLayout">
		<put-attribute name="title" value="장바구니창" />
		<put-attribute name="body"
			value="/WEB-INF/views/cart/cart.jsp" />
	</definition>



</tiles-definitions>	